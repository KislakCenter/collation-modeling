<% if @quire.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@quire.errors.count, "error") %>.
    </div>
    <ul>
    <% @quire.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>Leaves</h3>

<%= f.hidden_field :preceding_folio_number %>

<div id="leaves_list">
  <div class="row">
    <div class="col-sm-1 text-center"><strong>Leaf</strong></div>
    <div class="col-sm-1 text-center"><strong>Folio number</strong></div>
    <div class="col-sm-1 text-center"><strong>Folio certainty</strong></div>
    <div class="col-sm-1 text-center"><strong>Attachment method</strong></div>
    <div class="col-sm-1 text-center"><strong>Attachment certainty</strong></div>
    <div class="col-sm-1 text-center"><strong>Single</strong></div>
    <div class="col-sm-1 text-center"><strong>Quire certainty</strong></div>
    <div class="col-sm-1 text-center"><strong>Mode</strong></div>
    <div class="col-sm-1 text-center"><strong>Mode certainty</strong></div>
    <div class="col-sm-1 text-center"><strong>Subquire</strong></div>
  </div>
  <%= f.fields_for :quire_leaves do |quire_leaf| %>
    <%= render 'quire_leaf_fields', quire_leaf: quire_leaf %>
  <% end %>
</div>

<p><%= link_to_add_quire_leaf 'Add leaf', f, class: 'btn btn-primary' %></p>
<hr />

<p id="control-buttons">
  <%= f.submit class: 'btn btn-default' %>
  <%= link_to 'Cancel', @quire.manuscript, class: 'btn btn-default' %>
</p>
